{% extends 'dashboard.html.twig' %}

{% block body %}

    <div class="title_left">
        <h1 align="center">Gestion des Conventions</h1>
    </div>

    <div class="x_panel" align="auto">
        <div class="x_title">
            <div class="clearfix">
                <div>
                    <h2 align="center"><u>Liste des Conventions</u> : <small>Détails</small></h2>
                </div>
                <ul class="nav navbar-right ">
                    <a href="{{ path('convention_new') }}"><i class="fa fa-save"></i> Créer Convention</a>
                </ul>
            </div>

        </div>
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Saisir les données à rechercher ...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Rechercher</button>
                </span>
            </div>
        </div>
    </div>

    <div class="x_panel" align="auto">
        <div align="left">
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </div>
        <div class="x_content">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Libellé</th>
                        <th>Description</th>
                        <th>Logo</th>
                        <th>Date Création</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for convention in conventions %}
                        <tr>
                            <td><a href="{{ path('convention_show', { 'idConv': convention.idConv }) }}"><i class="fa fa-eye"></i> <u>{{ convention.idConv }}</u></a></td>
                            <td>{{ convention.libelleConv }}</td>
                            <td>{{ convention.DescriptConv }}</td>
                            <td><img src="{{ asset('images/convention/') }}{{ convention.imagecv }}"  height="50"></td>
                            <td>{% if convention.updatedAt %}{{ convention.updatedAt|date('Y-m-d') }}{% endif %}</td>
                            <td>
                                <a href="{{ path('convention_edit', { 'idConv': convention.idConv }) }}"><i class="fa fa-edit"></i> Modifier </a>
                                </br>
                                <a href="{{ path('convention_delete', { 'idConv': convention.idConv }) }}"><i class="fa fa-trash"></i> Supprimer </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}