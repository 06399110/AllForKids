{% extends 'dashboard.html.twig' %}

{% block body %}

    <div class="title_left">
        <h1 align="center">Gestion des Gouvernorats</h1>
    </div>

    <div class="x_panel" align="auto">
        <div class="x_title">
            <div class="clearfix">
                <div>
                    <h2 align="center"><u>Liste des Gouvernorats</u> : <small>Détails</small></h2>
                </div>
                <ul class="nav navbar-right ">
                    <a href="{{ path('gouvernorat_new') }}"><i class="fa fa-save"></i> Créer Gouvernorat</a>
                </ul>
            </div>
        </div>
        <div align="left">
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </div>
        <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Libelle Gouvernorat</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for gouvernorat in gouvernorats %}
                    <tr>
                        <td><a href="{{ path('gouvernorat_show', { 'idGouvernorat': gouvernorat.idGouvernorat }) }}"><i class="fa fa-eye"></i> <u>{{ gouvernorat.idGouvernorat }}</u></a></td>
                        <td>{{ gouvernorat.libelleGouvernorat }}</td>
                        <td>
                            <a href="{{ path('gouvernorat_edit', { 'idGouvernorat': gouvernorat.idGouvernorat }) }}">
                                <i class="fa fa-edit"></i> Modifier /<i class="fa fa-trash"></i> Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
