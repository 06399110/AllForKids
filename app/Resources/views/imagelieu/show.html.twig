{% extends 'base.html.twig' %}

{% block body %}
    <h1>Imagelieu</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ imageLieu.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ imageLieu.description }}</td>
            </tr>
            <tr>
                <th>Imagename</th>
                <td>{{ imageLieu.imageName }}</td>
            </tr>
            <tr>
                <th>Imagesize</th>
                <td>{{ imageLieu.imageSize }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if imageLieu.updatedAt %}{{ imageLieu.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('imagelieu_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('imagelieu_edit', { 'id': imageLieu.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
